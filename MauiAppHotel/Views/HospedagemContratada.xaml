<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="{StaticResource Black}">
    
    <ScrollView>
            
        <VerticalStackLayout VerticalOptions="Center">
            <Image Source="quarto.png" 
                    HorizontalOptions="Center"
                    Margin="100,-50,100,0"/>

            <Label Text="{Binding QuartoSelecionado.Descricao}"
                    FontAttributes="Bold"
                    TextColor="{StaticResource White}"
                    FontSize="30"
                    HorizontalTextAlignment="Center"/>

            <Frame Margin="10">
                <HorizontalStackLayout>
                    <VerticalStackLayout>
                        <HorizontalStackLayout Margin="0,10,10,0">
                            <Label Text="Adultos: "/>
                            <Label Text="{Binding QntAdultos}" 
                                Margin="20,0,0,0"
                                FontAttributes="Bold"
                                TextColor="{StaticResource Black}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Margin="0,10,10,0">
                            <Label Text="CrianÃ§as: "/>
                            <Label Text="{Binding QntCriancas}"
                                Margin="14,0,0,0"
                                FontAttributes="Bold"
                                TextColor="{StaticResource Black}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <Frame Margin="10">
                <Grid ColumnDefinitions="*, *, *"
                        RowDefinitions="Auto, Auto">
                
                    <Label Grid.Row="0"
                            Grid.Column="0"
                            Text="Check-in"/>
                    <Label Grid.Row="0"
                            Grid.Column="1"
                            Text="Check-out"/>
                    <Label Grid.Row="0"
                            Grid.Column="2"
                            Text="Estadia"/>

                    <Label Grid.Row="1"
                            Grid.Column="0"
                            Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                    <Label Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                    <Label Grid.Row="1"
                            Grid.Column="2"
                            Text="{Binding Estadia}"/>
                
                </Grid>
            </Frame>

            <Frame Margin="10">
                <HorizontalStackLayout>
                    <Label Text="Valor Total:"
                            VerticalOptions="Center"
                            Margin="0,0,20,0"/>
                    <Label FontAttributes="Bold"
                            Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"/>
                </HorizontalStackLayout>           
            </Frame>

            <Button Text="Voltar"
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked"
                    BackgroundColor="White"
                    FontAttributes="Bold"
                    TextColor="Black"/>

        </VerticalStackLayout>

    </ScrollView>
    
</ContentPage>