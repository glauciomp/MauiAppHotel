            <Button FontAttributes="Bold"
                    TextColor="Black"
                    Text="Voltar para Reserva"
                    Clicked="OnVoltarButtonClicked"
                    BackgroundColor="{StaticResource White}"
                    WidthRequest="220"
                    HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>